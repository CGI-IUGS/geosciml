<?xml version="1.0" encoding="UTF-8"?>
<c:ComplexDataStore xmlns:c="http://www.geotools.org/complex"
	xmlns:ogc="http://www.opengis.net/ogc"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.geotools.org/complex ComplexDataStore.xsd
                      http://www.opengis.net/ogc http://schemas.opengis.net/filter/1.1.0/expr.xsd">

	<namespaces>

		<Namespace>
			<prefix>gsml</prefix>
			<uri>urn:cgi:xmlns:CGI:GeoSciML:2.0</uri>
		</Namespace>

		<Namespace>
			<prefix>gml</prefix>
			<uri>http://www.opengis.net/gml</uri>
		</Namespace>

		<Namespace>
			<prefix>xlink</prefix>
			<uri>http://www.w3.org/1999/xlink</uri>
		</Namespace>

		<Namespace>
			<prefix>sa</prefix>
			<uri>http://www.opengis.net/sampling/1.0</uri>
		</Namespace>

		<Namespace>
			<prefix>om</prefix>
			<uri>http://www.opengis.net/om/1.0</uri>
		</Namespace>

		<Namespace>
			<prefix>cv</prefix>
			<uri>http://www.opengis.net/cv/0.2.1</uri>
		</Namespace>

		<Namespace>
			<prefix>swe</prefix>
			<uri>http://www.opengis.net/swe/1.0.1</uri>
		</Namespace>

		<Namespace>
			<prefix>sml</prefix>
			<uri>http://www.opengis.net/sensorML/1.0.1</uri>
		</Namespace>

	</namespaces>

	<sourceDataStores>
		<DataStore>
			<id>MappedFeatureUseCase2A</id>
			<parameters>
				<Parameter>
					<name>directory</name>
					<!-- path can be relative to this file if starts with "file: -->
					<value>file:./</value>
				</Parameter>
			</parameters>
		</DataStore>
	</sourceDataStores>

	<catalog>../../schemas/catalog.xml</catalog>

	<targetTypes>
		<FeatureType>
			<schemaUri>
				../../profiles/MappedFeatureUseCase2A.xsd
			</schemaUri>
		</FeatureType>
	</targetTypes>

	<typeMappings>

		<FeatureTypeMapping>

			<sourceDataStore>MappedFeatureUseCase2A</sourceDataStore>
			<sourceType>MappedFeatureUseCase2A</sourceType>

			<targetElement>gsml:MappedFeatureUseCase2A</targetElement>

			<groupBy />

			<attributeMappings>

				<AttributeMapping>
					<targetAttribute>
						gsml:MappedFeatureUseCase2A
					</targetAttribute>
					<idExpression>
						<OCQL>getId()</OCQL>
					</idExpression>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>gml:name[1]</targetAttribute>
					<sourceExpression>
						<OCQL>LEX_D</OCQL>
					</sourceExpression>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>gsml:shape</targetAttribute>
					<sourceExpression>
						<OCQL>SHAPE</OCQL>
					</sourceExpression>
				</AttributeMapping>

				<!-- GeologicUnit -->

				<AttributeMapping>
					<targetAttribute>
						gsml:specification
					</targetAttribute>
					<targetAttributeNode>
						gsml:GeologicUnitPropertyType
					</targetAttributeNode>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:observationMethod/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'creative imagination'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>
							'urn:some:authority:on:geologicunit:observationmethods'
						</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:purpose
					</targetAttribute>
					<sourceExpression>
						<OCQL>'instance'</OCQL>
					</sourceExpression>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:bodyMorphology/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'fan'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>
							'urn:some:authority:on:morphologies'
						</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:compositionCategory/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'carbonate'</OCQL>
					</sourceExpression>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:exposureColor/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'bisque'</OCQL>
					</sourceExpression>
				</AttributeMapping>


				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:outcropCharacter/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'poorly exposed'</OCQL>
					</sourceExpression>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:rank
					</targetAttribute>
					<sourceExpression>
						<OCQL>'formation'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>'urn:some:authority:on:ranks'</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:classifier/gsml:ControlledConcept
					</targetAttribute>
					<ClientProperty>
						<name>gml:id</name>
						<value>strConcat('gml.id.', MSLINK)</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:classifier/gsml:ControlledConcept/gml:name
					</targetAttribute>
					<sourceExpression>
						<OCQL>'The gml name of the concept'</OCQL>
					</sourceExpression>
				</AttributeMapping>


				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:classifier/gsml:ControlledConcept/gsml:identifier
					</targetAttribute>
					<sourceExpression>
						<OCQL>'urn:classifier:some:concept'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>'urn:ieft:rfc:2141'</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:classifier/gsml:ControlledConcept/gsml:name
					</targetAttribute>
					<sourceExpression>
						<OCQL>'Concept name goes here'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>xml:lang</name>
						<value>'en-GB'</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:specification/gsml:GeologicUnit/gsml:classifier/gsml:ControlledConcept/gsml:vocabulary
					</targetAttribute>
					<ClientProperty>
						<name>xlink:href</name>
						<value>
							'http://example.org/we/have/serialised/enough/for/one/day'
						</value>
					</ClientProperty>
				</AttributeMapping>

				<!--  End of GeologicUnit -->

				<AttributeMapping>
					<targetAttribute>
						gsml:observationMethod/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>'dummy'</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>
							'urn:some:authority:on:mappedfeature:observationmethods'
						</value>
					</ClientProperty>
				</AttributeMapping>

				<!--
					gsml:positionalAccuracy is abstract so need to give it a concrete type.
					This mapping must come before the mapping for
					gsml:positionalAccuracy/gsml:CGI_NumericValue/gsml:principalValue
				-->
				<AttributeMapping>
					<targetAttribute>
						gsml:positionalAccuracy
					</targetAttribute>
					<targetAttributeNode>
						gsml:CGI_NumericValuePropertyType
					</targetAttributeNode>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:positionalAccuracy/gsml:CGI_NumericValue/gsml:principalValue
					</targetAttribute>
					<sourceExpression>
						<OCQL>500</OCQL>
					</sourceExpression>
					<ClientProperty>
						<name>uom</name>
						<value>'urn:ogc:def:uom:UCUM:m'</value>
					</ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>
						gsml:samplingFrame
					</targetAttribute>
					<ClientProperty>
						<name>xlink:href</name>
						<value>
							'http://example.com/get/your/sampling/frame/here'
						</value>
					</ClientProperty>
				</AttributeMapping>

			</attributeMappings>

		</FeatureTypeMapping>

	</typeMappings>

</c:ComplexDataStore>
