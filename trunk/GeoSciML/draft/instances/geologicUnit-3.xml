	<!-- Third descripiton-->
	<geologicFeatureMember>
		<LithoStratigraphicUnit gml:id="LS3">
			<!-- unit w/ in-line composition definition -->
			<gml:description>This is a description of Typical properties of McCoy Sandstone outcrops in the San Bernardino Wash quad, based on map collar description. The text on the map collar reads as follows: "Thick bedded lithic sandstone with abundant low-angle cross bedding....blah blah blah"</gml:description>
			<gml:name>McCoy Sandstone, San Bernardino Wash quad</gml:name>
			<gml:boundedby>
				<lowerCorner/>
				<!-- these would be the corners of the quadrangle-->
				<upperCorner/>
			</gml:boundedby>
			<purpose codeSpace="http://www.iugs-cgi.org/DescriptionPurposeVocabulary">TypicalNorm<!--Specification of the intended purpose/level of abstraction for a given feature or object instance. Scoped name because intension is asserted by author of the data instance. Values: Instance, TypicalNorm, IdentifyingNorm. -->	</purpose>
			<age>
				<GeologicAge>
					<value>
						<CGI_TermValue>
						<qualifier/>
							<value codeSpace="http://www.iugs-cgi.org/geologicAgeVocabulary">Middle Cretaceous</value>
						</CGI_TermValue>
					</value>
					<event/>
				</GeologicAge>
			</age>
			<metadata/>
			<classifier> xlink:href="#McCoySandstoneConcept"</classifier>
			<partOf/> <!-- this unit has no geologic unit parts -->
			<bodyMorphology/>
			<outcropCharacter>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/outcropCharacterVocabulary">alternating ledge and slope forming</value>
				</CGI_TermValue>
			</outcropCharacter>
			<genesis/>
			<exposureColor>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/exposureColorVocabulary">pink</value>
				</CGI_TermValue>
			</exposureColor>
			<composition>
				<role codeSpace="http://www.iugs-cgi.org/compositionPartRoleVocabulary">Lithologic Constituent</role>
				<proportion>
					<CGI_NumericValue>
					<qualifier/>
						<principalValue uom="percent">100</principalValue>
						<plusDelta uom="percent">0</plusDelta>
						<minusDelta uom="percent">0</minusDelta>
					</CGI_NumericValue>
				</proportion>
				<material>
					<CompoundMaterial gml:id="rock24">
						<!-- I don't imagine it would be described in-line very often, but it could be done -->
						<gml:name>sandstone prototype</gml:name>
						<gml:description>This is the prototype CompoundMaterial description for the vocabulary term sandstone. Sandstone is a granular sedimentary rock ....blah blah blah"</gml:description>
						<purpose codeSpace="http://www.iugs-cgi.org/DescriptionPurposeVocabulary">DefiningNorm<!--Specification of the intended purpose/level of abstraction for a given feature or object instance. Scoped name because intension is asserted by author of the data instance. Values: Instance, TypicalNorm, IdentifyingNorm. --></purpose>
			
			<metadata/>
			<classifier> xlink:href="#SandstoneConcept" <!--note that since this is the prototype description, the classifer is the concept that the instance defines....--></classifier>
						<consolidationDegree>
							<CGI_TermValue>
								<value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
							</CGI_TermValue>
						</consolidationDegree>
						<!-- the rest of the rock description goes here -->
						<compositionClass>
							<CGI_TermValue>
							<qualifier/>
								<value codeSpace="http://www.iugs-cgi.org/CompositionVocabulary">siliciclastic</value>
							</CGI_TermValue>
						</compositionClass>
					</CompoundMaterial>
				</material>
			</composition>
			<rank codeSpace="http://www.iugs-cgi.org/rankVocabulary">Formation</rank>
			<compositionClass/>
			<weatheringCharacter/>
			<metamorphicGrade>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/metamorphicGradeVocabulary">low greenschist</value>
				</CGI_TermValue>
			</metamorphicGrade>
			<unitThickness/>
			<beddingStyle/>
			<beddingPattern/>
			<beddingThickness/>
		</LithoStratigraphicUnit>
	</geologicFeatureMember>
</Gsml>
