	<!-- ************************************************************************************************-->
	<!-- second description -->
	<geologicFeatureMember>
		<LithoStratigraphicUnit gml:id="LS2">
			<!-- unit w/ composition by reference -->
			
			<gml:description>This is a description of Typical properties of Eagle Conglomerate outcrops in the San Bernardino Wash quad, based on map collar description. The text on the map collar reads as follows: "Massive conglomerate unit at base of Juncal Group....blah blah blah"</gml:description>
			<gml:name>Eagle Conglomerate, San Bernardino Wash quad</gml:name>
			<gml:boundedby>
				<lowerCorner/>
				<!-- these would be the corners of the quadrangle-->
				<upperCorner/>
			</gml:boundedby>
			<purpose codeSpace="http://www.iugs-cgi.org/DescriptionPurposeVocabulary">TypicalNorm<!--Specification of the intended purpose/level of abstraction for a given feature or object instance. Scoped name because intension is asserted by author of the data instance. Values: Instance, TypicalNorm, IdentifyingNorm. --> </purpose>
			<age>
				<GeologicAge>
					<value>
						<CGI_TermValue>
						<qualifier/>
							<value codeSpace="http://www.iugs-cgi.org/geologicAgeVocabulary">Lower Cretaceous</value>
						</CGI_TermValue>
					</value>
					<event>
						<CGI_TermValue>
						<qualifier/>
							<value codeSpace="http://www.iugs-cgi.org/EventVocabulary">deposition</value>
						</CGI_TermValue>
					</event>
				</GeologicAge>
			</age>
			<metadata/>
			<classifier> xlink:href="#EagleConglomerateConcept"</classifier>
			<partof/>	<!-- no geologic unit parts defined here -->
			<bodyMorphology/>
			<outcropCharacter>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/outcropCharacterVocabulary">ledge forming</value>
				</CGI_TermValue>
			</outcropCharacter>
			<genesis/>
			<exposureColor>
				<CGI_TermValue>
				<qualifier>codeSpace="http://www.iugs-cgi.org/ValueQualifiers">common</qualifier>
									<value codeSpace="http://www.iugs-cgi.org/exposureColorVocabulary">red-brown</value>
				</CGI_TermValue>
				<CGI_TermValue>
				<qualifier>codeSpace="http://www.iugs-cgi.org/ValueQualifiers">sometimes</qualifier>
									<value codeSpace="http://www.iugs-cgi.org/exposureColorVocabulary">gray-red</value>
				</CGI_TermValue>
				<CGI_TermValue>
				<qualifier>codeSpace="http://www.iugs-cgi.org/ValueQualifiers">rare</qualifier>
									<value codeSpace="http://www.iugs-cgi.org/exposureColorVocabulary">yellow-tan</value>
				</CGI_TermValue>
			</exposureColor>
			<composition>
				<role codeSpace="http://www.iugs-cgi.org/compositionPartRoleVocabulary">entirety</role>
				<proportion>
					<CGI_NumericValue>
						<principalValue uom="percent">100</principalValue>
						<plusDelta uom="percent">0</plusDelta>
						<minusDelta uom="percent">0</minusDelta>
					</CGI_NumericValue>
				</proportion>
				<material xlink:href="#Rock144"/>
			</composition>
			<rank codeSpace="http://www.iugs-cgi.org/rankVocabulary">Formation</rank>
			<compositionClass>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/CompositionTermsVocabulary">
						<!--Term to specify the gross chemical character of geologic unit. Examples include silicate, carbonate, ferromagnesian, oxide. -->siliciclastic</value>
				</CGI_TermValue>
			</compositionClass>
			<weatheringCharacter/>
			<metamorphicGrade>
				<CGI_TermValue>
					<value codeSpace="http://www.iugs-cgi.org/metamorphicGradeVocabulary">low greenschist</value>
				</CGI_TermValue>
			</metamorphicGrade>
			<unitThickness/>
			<beddingStyle/>
			<beddingPattern/>
			<beddingThickness/>
		</LithoStratigraphicUnit>
	</geologicFeatureMember>
