<?xml version="1.0" encoding="UTF-8"?>
<cgi-gt:GeologicTimeScale xmlns:cgi-gt="http://www.cgi-iugs.org/xml/geologicTime" xmlns:meta="http://www.seegrid.csiro.au/xml/metaLite" xmlns:gml="http://www.opengis.net/gml" xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="     http://www.cgi-iugs.org/xml/geologicTime ../../CGI/geologicTime/geoTime.xsd      http://www.opengis.net/gml ../../CGI/geologicTime/gml4geotime.xsd  http://www.seegrid.csiro.au/xml/metaLite ../../CGI/geologicTime/meta4geoTime.xsd"
                       gml:id="ICSTimeScale_EonsOnly">
	<gml:description>The geologic timescale, as defined by ICS - decomposed to eons only</gml:description>
	<gml:name>ICS Geologic Timescale - eons only</gml:name>
	<gml:domainOfValidity>Earth</gml:domainOfValidity>
	<!-- ============== -->
	<cgi-gt:component>
		<cgi-gt:GeochronologicEra gml:id="AR">
			<gml:name>Archean</gml:name>
			<cgi-gt:start xlink:href="urn:x-seegrid:items:exceptions:undefined"/>
			<cgi-gt:end xlink:href="#AR_PR"/>
			<cgi-gt:rank>Eon</cgi-gt:rank>
		</cgi-gt:GeochronologicEra>
	</cgi-gt:component>
	<cgi-gt:component>
		<cgi-gt:GeochronologicEra gml:id="PR">
			<gml:name>Proterozoic</gml:name>
			<cgi-gt:start xlink:href="#AR_PR"/>
			<cgi-gt:end xlink:href="#PR_PH"/>
			<cgi-gt:rank>Eon</cgi-gt:rank>
		</cgi-gt:GeochronologicEra>
	</cgi-gt:component>
	<cgi-gt:component>
		<cgi-gt:GeochronologicEra gml:id="PH">
			<gml:name>Phanerozoic</gml:name>
			<cgi-gt:start xlink:href="#PR_PH"/>
			<cgi-gt:end xlink:href="#present"/>
			<cgi-gt:rank>Eon</cgi-gt:rank>
		</cgi-gt:GeochronologicEra>
	</cgi-gt:component>
	<!-- ======================== -->
	<!-- Reference times -->
	<!-- Positions of Global Stratotype Points as given in http://www.stratigraphy.org/gssp.htm 2004-04-25 -->
	<!-- ======================== -->
	<cgi-gt:referencePoint>
		<cgi-gt:NumericEraBoundary gml:id="AR_PR">
			<gml:name>Base Proterozoic</gml:name>
			<gml:name>Base Paleoproterozoic</gml:name>
			<gml:name>Base Siderian</gml:name>
			<cgi-gt:position>
				<gml:TimeInstant gml:id="PR_Origin">
					<gml:timePosition frame="tcs.xml#geologyMA">2500.</gml:timePosition>
				</gml:TimeInstant>
			</cgi-gt:position>
			<cgi-gt:status>GSSA</cgi-gt:status>
			<cgi-gt:reference xlink:href="citations.xml#Ev14p139_1991"/>
		</cgi-gt:NumericEraBoundary>
	</cgi-gt:referencePoint>
	<cgi-gt:referencePoint>
		<cgi-gt:GeochronologicBoundary gml:id="PR_PH">
			<gml:description>Three different estimates of the position of this boundary are included.</gml:description>
			<gml:name>Base Phanerozoic</gml:name>
			<gml:name>Base Paleozoic</gml:name>
			<gml:name>Base Cambrian</gml:name>
			<gml:name>Base Lower Cambrian</gml:name>
			<cgi-gt:position>
				<cgi-gt:StratigraphicDateEstimate gml:id="PH_Origin">
					<gml:timePosition frame="tcs.xml#geologyMa">-540.0</gml:timePosition>
					<cgi-gt:quality>
						<meta:QuantitativeAssessment>
							<meta:explanation>Error</meta:explanation>
							<meta:values uom="Ma">5</meta:values>
						</meta:QuantitativeAssessment>
					</cgi-gt:quality>
					<cgi-gt:status>Informal</cgi-gt:status>
					<cgi-gt:reference xlink:href="citations.xml#chronos"/>
					<cgi-gt:observationalBasis xlink:href="dates.xml#PH_Origin1"/>
					<cgi-gt:observationalBasis xlink:href="dates.xml#PH_Origin2"/>
					<cgi-gt:observationalBasis xlink:href="dates.xml#PH_Origin3"/>
				</cgi-gt:StratigraphicDateEstimate>
			</cgi-gt:position>
			<cgi-gt:event xlink:href="urn:x-seegrid:items:exceptions:unknown"/>
			<cgi-gt:stratotype xlink:href="gssp.xml#PH_OriginPoint1"/>
		</cgi-gt:GeochronologicBoundary>
	</cgi-gt:referencePoint>
