<Gsml xmlns="http://www.cgi-iugs.org/xml/GeoSciML/1.0" xmlns:gml="http://www.opengis.net/gml" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cgi-iugs.org/xml/GeoSciML/1.0 ../schema/GeoSciML.xsd">
  <!-- Concepts  -->
  <vocabularyMember>
    <GeologicVocabulary gml:id="nadm1.0">
      <gml:name>LithClass 6.1 (fragment)</gml:name>
      <conceptMember>
        <ControlledConcept gml:id="lith-1">
          <!-- simple in-line definition -->
          <gml:name>Granite</gml:name>
          <preferredName>granite</preferredName>
          <prototype>
            <CompoundMaterial gml:id="granite">
              <gml:description>A plutonic rock defined in the QAPF diagram as having Q between 20 and 60% and P/(A+P) between 10 and 65%</gml:description>
              <gml:name>Granite</gml:name>
              <consolidationDegree>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
                </CGI_TermValue>
              </consolidationDegree>
            </CompoundMaterial>
          </prototype>
        </ControlledConcept>
      </conceptMember>
      <conceptMember>
        <ControlledConcept gml:id="lith-5">
          <!-- simple in-line definition w/ fabrics-->
          <gml:name>Plutonic rock</gml:name>
          <preferredName>plutonic</preferredName>
          <prototype>
            <CompoundMaterial gml:id="plutonic">
              <gml:description>A rock formed at considerable depth by crystallization of magma and/or by chemical alteration.  It is characteristically medium- to coarse-grained, of granitoid texture.</gml:description>
              <gml:name>Plutonic rock</gml:name>
              <consolidationDegree>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
                </CGI_TermValue>
              </consolidationDegree>
              <fabric>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/fabricList">plutonic</value>
                </CGI_TermValue>
              </fabric>
              <fabric>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/fabricList">hypabyssal</value>
                </CGI_TermValue>
              </fabric>
            </CompoundMaterial>
          </prototype>
        </ControlledConcept>
      </conceptMember>
      <conceptMember>
        <ControlledConcept gml:id="lith-6">
          <!-- referenced definition in different document -->
          <gml:name>granitoid</gml:name>
          <preferredName>granitoid</preferredName>
          <prototype xlink:href="#rock144"/>
        </ControlledConcept>
      </conceptMember>
      <conceptMember>
        <ControlledConcept gml:id="lith-9">
          <!-- definition w/ multiple names, one preferred -->
          <gml:name>leuco-granite</gml:name>
          <gml:name>trondhjemite</gml:name>
          <preferredName>tonalite</preferredName>
          <prototype>
            <CompoundMaterial gml:id="tonalite">
              <gml:description>A plutonic rock defined in the QAPF diagram as having Q between 20 and 60% and P/(A+P) > 90%</gml:description>
              <gml:name>Tonalite</gml:name>
              <consolidationDegree>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
                </CGI_TermValue>
              </consolidationDegree>
              <fabric>
                <CGI_TermValue>
                  <value codeSpace="http://www.iugs-cgi.org/fabricList">plutonic</value>
                </CGI_TermValue>
              </fabric>
            </CompoundMaterial>
          </prototype>
        </ControlledConcept>
      </conceptMember>
    </GeologicVocabulary>
  </vocabularyMember>
