					<prototype xlink:href="#rock144"/>
					<vocabulary xlink:href="urn:x-cgi:lex:lithology:GSV:6.1:LithClass"/>
				</ControlledConcept>
			</member>
			<member>
				<ControlledConcept gml:id="lith-9">
					<!-- definition w/ multiple names, one preferred -->
					<gml:name>urn:x-cgi:def:lithology:GSV:6.1:LithClass:tonalite</gml:name>
					<gml:name>leuco-granite</gml:name>
					<gml:name>trondhjemite</gml:name>
					<preferredName>tonalite</preferredName>
					<prototype>
						<CompoundMaterial gml:id="tonalite">
							<gml:description>A plutonic rock defined in the QAPF diagram as having Q between 20 and 60% and P/(A+P) > 90%</gml:description>
							<gml:name>urn:x-cgi:desc:material:GSV:2005:tonalite</gml:name>
							<gml:name>Tonalite</gml:name>
							<purpose>identifyingNorm</purpose>
							<classifier xlink:href="urn:x-cgi:def:material:GSV:2005:matlex:plutonicRock"/>
							<color xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<consolidationDegree>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
								</CGI_TermValue>
							</consolidationDegree>
							<metamorphicGrade xlink:href="urn:x-ogc:def:nil:OGC:inapplicable"/>
							<particleGeometry xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<fabric xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<grossChemistry>silicate-intermediate</grossChemistry>
							<genesis>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/genesisList">plutonic</value>
								</CGI_TermValue>
							</genesis>
						</CompoundMaterial>
					</prototype>
					<vocabulary xlink:href="urn:x-cgi:lex:lithology:GSV:6.1:LithClass"/>
				</ControlledConcept>
