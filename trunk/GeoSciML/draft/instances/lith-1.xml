	<!-- Concepts  -->
	<vocabularyMember>
		<GeologicVocabulary gml:id="nadm1.0">
			<gml:name>urn:x-cgi:lex:lithology:GSV:6.1:LithClass</gml:name>
			<gml:name>LithClass 6.1 (fragment)</gml:name>
			<member>
				<ControlledConcept gml:id="lith-1">
					<!-- simple in-line definition -->
					<gml:name>urn:x-cgi:def:lithology:GSV:6.1:LithClass:granite</gml:name>
					<preferredName>granite</preferredName>
					<prototype>
						<CompoundMaterial gml:id="granite">
							<gml:description>A plutonic rock defined in the QAPF diagram as having Q between 20 and 60% and P/(A+P) between 10 and 65%</gml:description>
							<gml:name>urn:x-cgi:desc:material:GSV:2005:granite</gml:name>
							<gml:name>Granite</gml:name>
							<purpose>identifyingNorm</purpose>
							<classifier xlink:href="urn:x-cgi:def:material:GSV:2005:matlex:granite"/>
							<color>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/colorChart/Munsell">pink</value>
								</CGI_TermValue>
							</color>
							<consolidationDegree>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
								</CGI_TermValue>
							</consolidationDegree>
							<metamorphicGrade xlink:href="urn:x-ogc:def:nil:OGC:inapplicable"/>
							<particleGeometry xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<fabric xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<grossChemistry>silicate-felsic</grossChemistry>
							<genesis xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
						</CompoundMaterial>
					</prototype>
					<vocabulary xlink:href="urn:x-cgi:lex:lithology:GSV:6.1:LithClass"/>
				</ControlledConcept>
			</member>
			<member>
				<ControlledConcept gml:id="lith-5">
					<!-- simple in-line definition w/ fabrics-->
					<gml:description>Plutonic rock</gml:description>
					<gml:name>urn:x-cgi:def:lithology:GSV:6.1:LithClass:plutonic</gml:name>
					<preferredName>plutonic</preferredName>
					<prototype>
						<CompoundMaterial gml:id="plutonic">
							<gml:description>A rock formed at considerable depth by crystallization of magma and/or by chemical alteration.  It is characteristically medium- to coarse-grained, of granitoid texture.</gml:description>
							<gml:name>urn:x-cgi:desc:material:GSV:2005:plutonic</gml:name>
							<gml:name>Plutonic rock</gml:name>
							<purpose>identifyingNorm</purpose>
							<classifier xlink:href="urn:x-cgi:def:material:GSV:2005:matlex:plutonicRock"/>
							<color xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<consolidationDegree>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/consolidationDegreeList">consolidated</value>
								</CGI_TermValue>
							</consolidationDegree>
							<metamorphicGrade xlink:href="urn:x-ogc:def:nil:OGC:inapplicable"/>
							<particleGeometry xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<fabric xlink:href="urn:x-ogc:def:nil:OGC:unknown"/>
							<grossChemistry>silicate</grossChemistry>
							<genesis>
								<CGI_TermValue>
									<value codeSpace="http://www.iugs-cgi.org/genesisList">plutonic</value>
								</CGI_TermValue>
							</genesis>
						</CompoundMaterial>
					</prototype>
					<vocabulary xlink:href="urn:x-cgi:lex:lithology:GSV:6.1:LithClass"/>
				</ControlledConcept>
			</member>
			<member>
				<ControlledConcept gml:id="lith-6">
