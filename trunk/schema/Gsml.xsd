			<extension base="gml:AbstractFeatureType">
				<sequence>
					<element name="metadata" type="gsml:MetadataPropertyType" minOccurs="0">
						<annotation>
							<documentation>(association): </documentation>
						</annotation>
					</element>
					<element name="member" type="gsml:GSMLItemPropertyType" minOccurs="0" maxOccurs="unbounded">
						<annotation>
							<documentation>(association): Association that allows GeoSciML features and objects to be included as members in a GML Collection, through the use of the GSML class.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
