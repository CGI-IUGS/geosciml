<?xml version="1.0" encoding="UTF-8"?>
<schema targetNamespace="http://www.opengis.net/xmml" elementFormDefault="qualified" attributeFormDefault="unqualified" version="pre-release" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:gml="http://www.opengis.net/gml" xmlns:xmml="http://www.opengis.net/xmml">
	<annotation>
		<documentation>
curves.xsd

A GML conformant schema 
for various features with curve geometry relevant to geology

2004-02-04

Copyright (c) 2004 CSIRO - see https://www.seegrid.csiro.au/twiki/bin/view/Xmml/LegalNotices#Software_Notice
</documentation>
	</annotation>
	<!-- ====================================================================== -->
	<!-- bring in other schemas -->
	<import namespace="http://www.opengis.net/gml" schemaLocation="../gml/3.1.1/base/geometryComplexes.xsd"/>
	<include schemaLocation="./observation.xsd"/>
	<include schemaLocation="./geometry.xsd"/>
	<include schemaLocation="../enumerations/LUTportrayal.xsd"/>
	<!-- ====================================================================== -->
	<element name="CurveFeature" type="xmml:CurveFeatureType" substitutionGroup="xmml:Feature">
		<annotation>
			<documentation>A basic feature having just a curve shape. </documentation>
		</annotation>
	</element>
	<!-- ====== -->
	<complexType name="CurveFeatureType">
		<annotation>
			<documentation>Add featureType property for soft-typing. </documentation>
		</annotation>
		<complexContent>
			<extension base="xmml:CurvedFeatureType">
				<sequence>
					<element name="featureType" type="token" minOccurs="0"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
	<!-- ====== -->
	<complexType name="CurvedFeatureType">
		<annotation>
			<documentation>Add nodes and shape properties. </documentation>
		</annotation>
		<complexContent>
			<extension base="xmml:BoundedFeatureType">
				<sequence>
					<element ref="xmml:nodes"/>
					<element name="shape" type="gml:CurvePropertyType"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
	<!-- ====================================================================== -->
	<element name="CurveWithProperties" type="xmml:CurveWithPropertiesType" substitutionGroup="xmml:CurveFeature">
		<annotation>
			<documentation>A basic feature having just a curve shape and some soft-typed properties. </documentation>
		</annotation>
	</element>
	<!-- ====== -->
	<complexType name="CurveWithPropertiesType">
		<annotation>
			<documentation> Add generic properties and observations. </documentation>
		</annotation>
		<complexContent>
			<extension base="xmml:CurveFeatureType">
				<sequence>
					<group ref="xmml:property" minOccurs="0" maxOccurs="unbounded"/>
					<element ref="xmml:relatedObservation" minOccurs="0" maxOccurs="unbounded"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
	<!-- ====================================================================== -->
	<element name="ColouredCurve" type="xmml:ColouredCurveType" substitutionGroup="xmml:CurveFeature">
		<annotation>
			<documentation>A basic feature having a curve shape and default colour. </documentation>
		</annotation>
	</element>
	<!-- ====== -->
	<complexType name="ColouredCurveType">
		<annotation>
			<documentation>Add a defaultColour property. </documentation>
		</annotation>
		<complexContent>
			<extension base="xmml:CurveFeatureType">
				<sequence>
					<element name="defaultColour" type="xmml:colour"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
	<!-- ====================================================================== -->
</schema>
