<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace><prefix>gml</prefix><uri>http://www.opengis.net/gml/3.2</uri></Namespace>
		<Namespace><prefix>gsml</prefix><uri>http://xmlns.geosciml.org/GeoSciML-Core/3.0</uri></Namespace>
		<Namespace><prefix>gsmlgu</prefix><uri>http://xmlns.geosciml.org/GeologicUnit/3.0</uri></Namespace>
		<Namespace><prefix>gsmler</prefix><uri>http://xmlns.geosciml.org/EarthMaterial/3.0</uri></Namespace>
		<Namespace><prefix>swe</prefix><uri>http://www.opengis.net/swe/2.0</uri></Namespace>
		<Namespace><prefix>gmd</prefix><uri>http://www.isotc211.org/2005/gmd</uri></Namespace>
		<Namespace><prefix>gco</prefix><uri>http://www.isotc211.org/2005/gco</uri></Namespace>
		<Namespace><prefix>xlink</prefix><uri>http://www.w3.org/1999/xlink</uri></Namespace>
		<Namespace><prefix>xsi</prefix><uri>http://www.w3.org/2001/XMLSchema-instance</uri></Namespace>
	</namespaces>	
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				<Parameter><name>dbtype</name><value>${cgi.dbtype}</value></Parameter>
				<!--Parameter><name>jndiReferenceName</name><value>${cgi.jndi}</value></Parameter-->
				<Parameter><name>host</name><value>${cgi.host}</value></Parameter>
				<Parameter><name>port</name><value>${cgi.port}</value></Parameter>
				<Parameter><name>database</name><value>${cgi.database}</value></Parameter>
				<Parameter><name>user</name><value>${cgi.user}</value></Parameter>
				<Parameter><name>passwd</name><value>${cgi.passwd}</value></Parameter>
				<Parameter><name>schema</name><value>${cgi.schema}</value></Parameter>
				<Parameter><name>Expose primary keys</name><value>true</value></Parameter>
			</parameters>
		</DataStore>
	</sourceDataStores>	
	<includedTypes><Include>gsmler_RockMaterial.xml</Include></includedTypes>
	<!--<catalog>../../../schemas/catalog.xml</catalog>-->
	<targetTypes>
		<FeatureType><schemaUri>http://schemas.geosciml.org/geologicunit/3.0/geologicUnit.xsd</schemaUri></FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>GSMLGU_COMPOSITIONPART</sourceType>
			<targetElement>gsmlgu:CompositionPart</targetElement>
			<attributeMappings>
				<AttributeMapping>
					<targetAttribute>gsmlgu:CompositionPart</targetAttribute>
					<idExpression><OCQL>strConCat('gsmlgu.compositionpart-',ID)</OCQL></idExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmlgu:role</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>ROLE_HREF</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>ROLE_TITLE</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmlgu:material</targetAttribute>
					<sourceExpression>
						<OCQL>LINK_ROCKMATERIAL_ID</OCQL><linkElement>gsmler:RockMaterial</linkElement><linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmlgu:proportion</targetAttribute>
					<sourceExpression><linkElement>_gsmlgu_proportion</linkElement></sourceExpression>
				</AttributeMapping> 
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute><sourceExpression><OCQL>LINK_GEOLOGICUNIT_ID</OCQL></sourceExpression>
				</AttributeMapping>
			</attributeMappings>
		</FeatureTypeMapping>
		<FeatureTypeMapping>
			<mappingName>_gsmlgu_proportion</mappingName>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>GSMLGU_COMPOSITIONPART</sourceType>
			<targetElement>swe:QuantityRange</targetElement>
			<attributeMappings>
				<AttributeMapping>
					<targetAttribute>swe:uom</targetAttribute>
					<ClientProperty><name>code</name><value>PROPORTION_UOM_CODE</value></ClientProperty>
					<ClientProperty><name>xlink:href</name><value>PROPORTION_UOM_HREF</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>PROPORTION_UOM_TITLE</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>swe:value</targetAttribute>
					<sourceExpression><OCQL>strConCat(strConCat(PROPORTION_LOWER_VALUE,' '),PROPORTION_UPPER_VALUE)</OCQL></sourceExpression>
				</AttributeMapping>
			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>