<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace><prefix>gml</prefix><uri>http://www.opengis.net/gml/3.2</uri></Namespace>
		<Namespace><prefix>gsml</prefix><uri>http://xmlns.geosciml.org/GeoSciML-Core/3.0</uri></Namespace>
		<Namespace><prefix>gsmlgu</prefix><uri>http://xmlns.geosciml.org/GeologicUnit/3.0</uri></Namespace>
		<Namespace><prefix>gsmler</prefix><uri>http://xmlns.geosciml.org/EarthMaterial/3.0</uri></Namespace>
		<Namespace><prefix>swe</prefix><uri>http://www.opengis.net/swe/2.0</uri></Namespace>
		<Namespace><prefix>gmd</prefix><uri>http://www.isotc211.org/2005/gmd</uri></Namespace>
		<Namespace><prefix>gco</prefix><uri>http://www.isotc211.org/2005/gco</uri></Namespace>
		<Namespace><prefix>xlink</prefix><uri>http://www.w3.org/1999/xlink</uri></Namespace>
		<Namespace><prefix>xsi</prefix><uri>http://www.w3.org/2001/XMLSchema-instance</uri></Namespace>
	</namespaces>	
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				<Parameter><name>dbtype</name><value>${cgi.dbtype}</value></Parameter>
				<!--Parameter><name>jndiReferenceName</name><value>${cgi.jndi}</value></Parameter-->
				<Parameter><name>host</name><value>${cgi.host}</value></Parameter>
				<Parameter><name>port</name><value>${cgi.port}</value></Parameter>
				<Parameter><name>database</name><value>${cgi.database}</value></Parameter>
				<Parameter><name>user</name><value>${cgi.user}</value></Parameter>
				<Parameter><name>passwd</name><value>${cgi.passwd}</value></Parameter>
				<Parameter><name>schema</name><value>${cgi.schema}</value></Parameter>
				<Parameter><name>Expose primary keys</name><value>true</value></Parameter>
			</parameters>
		</DataStore>
	</sourceDataStores>
	<includedTypes>
		<Include>gsmler_color.xml</Include>
		<Include>gsmler_lithology.xml</Include>
	</includedTypes>
	<!--<catalog>../../../schemas/catalog.xml</catalog>-->
	<targetTypes>
		<FeatureType><schemaUri>http://schemas.geosciml.org/earthmaterial/3.0/earthMaterial.xsd</schemaUri></FeatureType>
	</targetTypes> 
	<typeMappings>		
		<FeatureTypeMapping>		
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>GSMLER_ROCKMATERIAL</sourceType>
			<targetElement>gsmler:RockMaterial</targetElement>
			<attributeMappings>	
				<AttributeMapping>
					<targetAttribute>gsmler:RockMaterial</targetAttribute>
					<idExpression><OCQL>strConCat('gsml.rockmaterial.',ID)</OCQL></idExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:color</targetAttribute>
					<sourceExpression>
						<OCQL>ID</OCQL><linkElement>gsmler_colour</linkElement><linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>true</isMultiple>
					<ClientProperty><name>xlink:title</name><value>COLOR_TITLE</value></ClientProperty>
					<ClientProperty><name>xlink:href</name><value>COLOR_HREF</value></ClientProperty>				
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:purpose</targetAttribute>
					<sourceExpression><OCQL>PURPOSE</OCQL></sourceExpression>										
				</AttributeMapping>	
				<AttributeMapping>
					<targetAttribute>gsmler:physicalProperty</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:geochemistry</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:metadata</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>gco:nilReason</name><value>'missing'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:compositionCategory</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:geneticCategory</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:constituent</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:particleGeometry</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:consolidationDegree</targetAttribute>
					<ClientProperty><name>xlink:title</name><value>CONSOLIDATIONDEGREE_TITLE</value></ClientProperty>
					<ClientProperty><name>xlink:href</name><value>CONSOLIDATIONDEGREE_HREF</value></ClientProperty>				
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:lithology</targetAttribute>
					<sourceExpression>
						<OCQL>ID</OCQL><linkElement>gsmler_lithology</linkElement><linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>true</isMultiple>
					<ClientProperty><name>xlink:title</name><value>LITHOLOGY_TITLE</value></ClientProperty>
					<ClientProperty><name>xlink:href</name><value>LITHOLOGY_HREF</value></ClientProperty>
				</AttributeMapping>	
				<AttributeMapping>
					<targetAttribute>gsmler:metamorphicProperties</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:alterationProperties</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsmler:fabric</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'template'</value></ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute>
					<sourceExpression><OCQL>ID</OCQL></sourceExpression>
				</AttributeMapping>	
			</attributeMappings>
		</FeatureTypeMapping>		
	</typeMappings>
</as:AppSchemaDataAccess>