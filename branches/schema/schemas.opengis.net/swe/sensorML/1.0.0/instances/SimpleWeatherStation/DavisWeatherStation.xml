											<swe:value>EIA574</swe:value>
										</swe:Category>
									</swe:field>
								</swe:DataRecord>
							</mechanicalLayer>
						</InterfaceDefinition>
					</interface>
				</InterfaceList>
			</interfaces>
			<!--~~~~~~~~~~~~~-->
			<!--Sensor Inputs-->
			<!--~~~~~~~~~~~~~-->
			<inputs>
				<InputList>
					<input name="atmosphericTemperature">
