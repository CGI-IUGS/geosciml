					<input name="wind">
						<swe:ObservableProperty definition="urn:x-ogcdef:phenomenon:OGC:windSpeed"/>
					</input>
					<input name="rainfall">
						<swe:ObservableProperty definition="urn:x-ogc:def:phenomenon:OGC:rainfall"/>
					</input>
					<input name="atmosphericPressure">
						<swe:ObservableProperty definition="urn:x-ogcdef:phenomenon:OGC:pressure"/>
					</input>
				</InputList>
			</inputs>
			<!--~~~~~~~~~~~~~~-->
			<!--Sensor Outputs-->
			<!--~~~~~~~~~~~~~~-->
			<outputs>
				<OutputList>
					<output name="weatherMeasurements">
						<swe:DataRecord gml:id="outputGroup">
							<swe:field name="time">
								<swe:Time definition="urn:x-ogc:def:phenomenon:observationTime">
									<swe:uom xlink:href="urn:x-ogc:def:unit:ISO8601"/>
								</swe:Time>
							</swe:field>
							<swe:field name="temperature">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:temperature">
									<swe:uom code="cel"/>
								</swe:Quantity>
							</swe:field>
							<swe:field name="windSpeed">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:windSpeed">
									<swe:uom code="m/s"/>
								</swe:Quantity>
							</swe:field>
							<swe:field name="windDirection">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:windDirection">
									<swe:uom code="deg"/>
								</swe:Quantity>
							</swe:field>
							<swe:field name="rainfall">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:rainfall">
									<swe:uom code="mm"/>
								</swe:Quantity>
							</swe:field>
							<swe:field name="barometricPressure">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:barometricPressure">
									<swe:uom code="hPa"/>
								</swe:Quantity>
							</swe:field>
							<swe:field name="windChill">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:windChill">
									<swe:uom code="cel"/>
								</swe:Quantity>
							</swe:field>
						</swe:DataRecord>
					</output>
					<output name="minMax">
						<swe:DataRecord gml:id="minMaxTemperatures">
							<swe:field name="dailyMinTemp">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:dailyMinimumTemperature"/>
							</swe:field>
							<swe:field name="dailyMaxTemp">
								<swe:Quantity definition="urn:x-ogc:def:phenomenon:OGC:dailyMinimumTemperature"/>
							</swe:field>
						</swe:DataRecord>
					</output>
				</OutputList>
			</outputs>
