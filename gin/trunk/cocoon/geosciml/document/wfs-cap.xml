<?xml version="1.0" encoding="ISO-8859-1"?>
<WFS_Capabilities xmlns="http://www.opengis.net/wfs" xmlns:ogc="http://www.opengis.net/ogc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gsml="http://www.cgi-iugs.org/xml/GeoSciML/1" version="1.0.0" updateSequence="0" xsi:schemaLocation="http://www.opengis.net/wfs http://schemas.opengeospatial.net/wfs/1.0.0/WFS-capabilities.xsd">

<Service>
  <Name>Canada_TestBed_2</Name>
  <Title>IUGS/CGI TestBed for Canada</Title>
  <Abstract>This service demonstrates serving geological information using GeoSciML</Abstract>

  <OnlineResource>http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs?</OnlineResource>
</Service>

<Capability>
  <Request>
    <GetCapabilities>
      <DCPType>
        <HTTP>
          <Get onlineResource="http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs?"/>
        </HTTP>

      </DCPType>
      <DCPType>
        <HTTP>
          <Post onlineResource="http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs?"/>
        </HTTP>
      </DCPType>
    </GetCapabilities>
    <DescribeFeatureType>
      <SchemaDescriptionLanguage>
        <XMLSCHEMA/>
        <SFE_XMLSCHEMA/>
      </SchemaDescriptionLanguage>
      <DCPType>
        <HTTP>
          <Get onlineResource="http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs?"/>
        </HTTP>
      </DCPType>
      <DCPType>

        <HTTP>
          <Post onlineResource="http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs?"/>
        </HTTP>
      </DCPType>
    </DescribeFeatureType>
    <GetFeature>
      <ResultFormat>
        <GML2/>
        <GML3/>

      </ResultFormat>
      <DCPType>
        <HTTP>
          <Post onlineResource="http://ngwd-bdnes.cits.rncan.gc.ca/service/iugs/wfs/GetFeature?"/>

        </HTTP>
      </DCPType>
    </GetFeature>
  </Request>
</Capability>

<FeatureTypeList>
  <Operations>
    <Query/>
  </Operations>

    <FeatureType>
        <Name>gsml:LithoStratigraphicUnit</Name>
        <Title>LithoStratigraphic Unit</Title>
        <SRS>EPSG:4326</SRS>
        <LatLongBoundingBox minx="-173.537" miny="35.8775" maxx="-11.9603" maxy="83.8009"/>
    </FeatureType>
</FeatureTypeList>

<ogc:Filter_Capabilities>
  <ogc:Spatial_Capabilities>
    <ogc:Spatial_Operators>
           <ogc:BBOX/>
    </ogc:Spatial_Operators>
  </ogc:Spatial_Capabilities>
</ogc:Filter_Capabilities>

</WFS_Capabilities>